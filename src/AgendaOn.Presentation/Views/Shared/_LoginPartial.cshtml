@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Account/Manage/Index" title="Manage">Olá, @User.Identity?.Name!</a>

        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="" asp-controller="auth" asp-action="logout">
                <button type="submit" class="btn btn-outline-secondary ms-2 ps-3 pe-3">Sair</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="auth" asp-action="autenticar">Autenticar</a>

        </li>
        <li class="nav-item">
            <a class="btn btn-outline-secondary ms-2" asp-area="" asp-controller="auth" asp-action="Registrar">Cadastrar</a>
        </li>
    }
</ul>
